<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="com.hazardalert.jpa">
		<description>
            Hazard Alert
        </description>
		<class>com.hazardalert.Area</class>
		<class>com.hazardalert.Alert</class>
		<class>com.hazardalert.Sender</class>
		<class>com.hazardalert.Subscription</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes> <!-- Avoid HardDeadlineException -->
		<properties>
			<!-- com.google.appengine.api.rdbms.AppEngineDriver ??? -->
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.GoogleDriver" />
			<property name="javax.persistence.jdbc.url"
				value="jdbc:google:mysql://hazard-alert-gae:hadb0/hadb0?user=root" />
			<!-- need MyIsam for spatial indexes, but hibernate won't create Geometry 
				types -->
			<!-- org.hibernate.dialect.MySQLDialect -->
			<!-- org.hibernate.spatial.dialect.mysql.MySQLSpatialDialect -->
			<!-- org.hibernate.spatial.dialect.mysql.MySQLSpatialInnoDBDialect -->
			<property name="hibernate.dialect"
				value="org.hibernate.spatial.dialect.mysql.MySQLSpatialDialect" />
			<!-- You may want to change this to false in production -->
			<property name="hibernate.show_sql" value="false" />
			<!-- You can change this to create at the first time -->
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<!-- Set this to 0 otherwise you sometimes get errors -->
			<property name="hibernate.connection.pool_size" value="0" />
			<property name="javax.persistence.lock.timeout" value="60000" />
		</properties>
	</persistence-unit>
</persistence>